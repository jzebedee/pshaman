  <tab>
    <label>General</label>


    <group>
      <label>Pulling</label>

      <input>
        <label>Pull distance</label>
        <target>PShaman.PullDistance</target>
      </input>

      <combobox>
        <label>Pull method</label>
        <target>PShaman.PullMethod</target>
        <width>110</width>
        <options>
          <option>Lightning Bolt</option>
          <option>Shock</option>
          <option>Walk up</option>
        </options>
      </combobox>

      <checkbox>
        <label>Drop totems before pull</label>
        <target>PShaman.TotemsBeforePull</target>
      </checkbox>

      <input>
        <label>Max time to wait for mob to approach (s)</label>
        <target>PShaman.WaitTime</target>
      </input>



      
    </group>

    <group>
      <label>Add Avoidance</label>

      <input>
        <label>Avoid possible adds this close</label>
        <target>PShaman.AvoidAddDist</target>
      </input>

	<checkbox>
        <label>Use Feral Spirit on Adds</label>
        <target>PShaman.UseFeralSpirit</target>
      </checkbox>


    </group>



    <group>
      <label>Shield</label>

      <combobox>
        <label>Shaman shield</label>
        <width>90</width>
        <target>PShaman.Shield</target>
        <options>
          <option>None</option>
          <option>Lightning</option>
          <option>Water</option>
		  <option>Earth</option>
        </options>
      </combobox>

      <combobox>
        <label>When to cast shield</label>
        <target>PShaman.WhenShield</target>
        <options>
          <option>Never</option>
          <option>Resting</option>
          <option>After other cast</option>
          <option>Always</option>
        </options>
      </combobox>

    </group>


    <group>
      <label>Runners</label>

      <combobox>
        <label>if target runs</label>
        <target>PShaman.RunnerAction</target>
        <width>130</width>
        <options>
          <option>Chase</option>
          <option>Chase while it is safe</option>
          <option>Do not chase</option>
        </options>
      </combobox>


<!--
      <checkbox>
